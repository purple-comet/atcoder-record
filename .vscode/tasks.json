{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "AtCoder Test (PyPy)",
            "type": "shell",
            "command": "oj",
            "args": [
                "t",
                "-c",
                "pypy3 main.py"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build and run oj",
            "command": "g++",
            "args": [
                "${file}",
                "&&",
                "oj",
                "t"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            },
        },
    ]
}